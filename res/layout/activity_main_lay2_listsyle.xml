<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/color_white"
    android:orientation="vertical" >

    <!-- 待修改成lay1样式 -->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:src="@drawable/color_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <!-- workspace 1 -->

        <ImageView
            android:layout_width="7dp"
            android:layout_height="fill_parent"
            android:src="@drawable/color_gray" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp" >

            <ImageView
                android:id="@+id/activity_main_lay2_img1"
                android:layout_width="96dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/activity_main_lay2_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_main_lay2_info1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- workspace 1 -->
        <!-- workspace 2 -->

        <ImageView
            android:layout_width="8dp"
            android:layout_height="fill_parent"
            android:src="@drawable/color_gray" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp" >

            <ImageView
                android:id="@+id/activity_main_lay2_img2"
                android:layout_width="96dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/activity_main_lay2_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_main_lay2_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- workspace 2 -->
        <!-- workspace 3 -->

        <ImageView
            android:layout_width="8dp"
            android:layout_height="fill_parent"
            android:src="@drawable/color_gray" />

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="7dp" >

            <ImageView
                android:id="@+id/activity_main_lay2_img3"
                android:layout_width="96dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/activity_main_lay2_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/activity_main_lay2_info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#737373"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="fill_parent"
            android:src="@drawable/color_gray" />

        <!-- workspace 3 -->

    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:src="@drawable/color_gray" />

</LinearLayout>